<resources>
    <!-- ~#######################~ -->
    <!-- ~Dark Application Theme ~ -->
    <!-- ~#######################~ -->

    <!-- Core colors -->
    <style name="DarkTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Main Navigation items -->
        <item name="android:colorPrimary">#d0d0d0</item>
        <item name="android:colorPrimaryDark">#a0a0a0</item>
        <!-- Absolute background and absolute foreground -->
        <item name="android:colorBackground">#101010</item>
        <item name="android:colorForeground">#606060</item>

        <!-- Nav Panel background and foreground -->
        <item name="android:panelColorBackground">#171717</item>
        <item name="android:panelColorForeground">#222222</item>
        <item name="android:drawableTint">#d0d0d0</item>

        <!-- Accent Color -->
        <item name="android:colorAccent">#f4b342</item>
        <item name="android:solidColor">#f4b342</item>

    </style>


    <!-- Light text for dark themes -->
    <style name="LittleTitleTextLight">
        <item name="android:textSize">@dimen/small_text</item>
        <item name="android:textColor">@color/colorTitleTextLight</item>
    </style>

